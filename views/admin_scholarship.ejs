<%- include("partials/_header.ejs")%>
<body>
     <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">
                <div class="left">
                    <%- include('partials/_navsideAdmin.ejs')%>
                </div>
            </div>
            <div class="col-md-10">
                <div class="top">
                    <%- include('partials/_userTop.ejs')%>
                </div>
                <div class="main">
                    <main>
                        <div class="container-fluid mt-4">
                            <div class="row justify-content-center m-3 bg-white p-5 border rounded-5">
                                <div class="col-6 border rounded-4" style="background-color: #58baab;">
                                    <p class="text-center fs-3 fw-bold text-white">สร้างทุนการศึกษา</p>
                                </div>
                                <%
                                    if(typeof status !== ""){
                                        (status.status == "success") ? color = "green" : color = "red";
                                %>
                                    <p class="text-center my-0 text-<%= color %>"><%= status.text %></p>
                                <% } %>
                                <div class="col-10  ">
                                    <form action="/createFund" method="post">
                                        <div class="row">
                                            <!-- AMOUNT -->
                                            <div class="col-6">
                                                <div class="mb-3">
                                                    <label for="tag" class="form-label fs-6">ชื่อทุน</label>
                                                    <input type="text" class="form-control" id="name" name="name" style="background-color: #f5f5fa;" required>
                                                </div>
                                            </div>
                                            <div class="col-4"></div>
                                            <!-- TAG -->
                                            <div class="col-6">
                                                <div class="mb-3">
                                                    <label for="amount" class="form-label fs-6">ระบุจำนวนเงิน</label>
                                                    <input type="number" class="form-control" id="prize" name="prize" min=1 style="background-color: #f5f5fa;" required>
                                                </div>
                                            </div>
                                            <div class="col-4"></div>
                                            <!-- detail -->
                                            <div class="col-8">
                                                <div class="mb-3">
                                                    <label for="detail" class="form-label fs-6">รายละเอียด</label>
                                                    <input type="text" class="form-control" id="detail" name="detail" style="background-color: #f5f5fa;">
                                                </div>
                                            </div>
                                            <div class="col-4"></div>
                                            <div class="col-8">
                                            </div>
                                            <div class="col-4 "><button class="btn px-5 text-white fw-bold" style="background-color: #58baab;">สร้างทุน</button></div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </main>
                </div>
            </div>
        </div>
    </div>
    <script src="js/script.js"></script>
</body>

</html>