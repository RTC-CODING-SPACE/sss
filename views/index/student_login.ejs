<%- include("../partials/_header.ejs")%>

    <body style="background-color: #c8e8e3;">
        <%- include('../partials/_navbar.ejs')%>
            <div class="container-fluid ">
                <div class=" base row  shadow-2" style="height: 85vh;margin:2rem ;padding:5rem 1rem">
                    <div class="row">
                        <!-- IMGAGE -->
                        <div class="col-md-6">
                            <div class="col-md-12">
                                <center>
                                    <img src="/assets/img/student_default.png" class="" alt="" style="width: 60%;">
                                </center>
                            </div>
                            <div class="col-md-12">
                                <p class="text-center fw-bolder fs-1" style="color: #58baab;">STUDENT</p>
                            </div>
                        </div>
                        <!-- FORM -->
                        <div class="col-md-6 ">
                            <div class="col-md-12">
                                <h1 class="fs-1 fw-bold text-center">LOGIN</h1>
                            </div>
                            <!-- FORM -->
                            <form action="/login/student" method="POST">
                                <!-- STUDENT ID -->
                                <div class="col-md-11">
                                    <label for="userID" class="form-label fs-3">STUDENT ID</label>
                                    <input type="text" class="form-control" id="userID" name="userID" style="background-color: #c8e8e3;padding:1rem;border:none;border-radius:1rem" required>
                                </div>
                                <!-- PASSWORD -->
                                <br>
                                <div class="col-md-11">
                                    <label for="password" class="form-label fs-3">PASSWORD</label>
                                    <input type="password" class="form-control" id="password" name="password" style="background-color: #c8e8e3;padding:1rem;border:none;border-radius:1rem" required>
                                    <%
                                        if(typeof status !== ""){
                                            (status.status == "success") ? color = "green" : color = "red";
                                    %>
                                        <span class="text-<%= color %>"><%= status.text %></span>
                                    <% } %>
                                </div>
                                <br>
                                <br>
                                <div class="col-md-11 text-center">
                                    <button class="btn btn-green fs-2 fw-bold text-center " style="background-color: #58baab;width:60%;padding:1rem">LOGIN</button>
                                </div>
                                <br>
                                <!--<a href="" class="text-danger" style="text-decoration: none;color:#f97f6e;">ลืมรหัสผ่าน ?</a>-->
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>

    </html>