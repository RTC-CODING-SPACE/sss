<%- include("../partials/_header.ejs")%>
<body>
    <%- include('../partials/_navbar.ejs')%>
    <div class="container-fluid">
        <div class="row ">
            <div class="col-md-12">
                <div class="base home-page-index pt-5 shadow-2" style="margin: 2rem;height:auto">
                    <div class="col-md-12 text-center">
                        <span class="display-3 ">
                            <span class="fw-bold" style="color: #f9db74;">S<span class="text-white fw-bold">TUDENT </span> </span>
                            <span class="fw-bold" style="color: #f9db74;">S<span class="text-white fw-bold">CHOLARSHIP </span> </span>
                            <span class="fw-bold" style="color: #f9db74;">S<span class="text-white fw-bold">YSTEM </span> </span>
                        </span>
                        <br><br>
                    </div>
                    <div class="col-md-12">
                        <div class="row d-flex justify-content-around">
                            <div class=" col-md-12 base " style="height: auto;padding:2rem">
                                <!-- TITLE -->
                                <div class="col-md-12">
                                    <h1 class=" fw-bold text-center" style="color:#58BAAB">แบบฟอร์มขอทุนการศึกษา</h1>
                                    <%
                                    if(typeof status !== ""){
                                        (status.status == "success") ? color = "green" : color = "red";
                                    %>
                                    <p class="text-center my-0 text-<%= color %>"><%= status.text %></p>
                                    <% } %>
                                </div>
                                <!-- STEP 1 -->
                                <% if (step == '1') {%>
                                <div class="content-1" id="content-1">
                                    <div class="col-md-12 d-flex justify-content-center align-itmes-center">
                                        <img src="/assets/img/index_application.png" width="280px" height="350px" style="object-fit:cover;max-width: 280px;border:solid #58BAAB 5px" alt="">
                                    </div>
                                    <div class="col-md-12 text-center">
                                        <br>
                                        <a class="none-director btn btn-red" style="padding: 1rem 3rem;" download href="/assets/files/application/scholarship_application.pdf"> Download</a>
                                        <br>
                                    </div>
                                    <div class="col-md-12 text-center">
                                        <br>
                                        <h3>กรุณา ดาวน์โหลด เอกสาร เพื่อนำไปใช้ในการแนบไฟล์</h3>
                                    </div>
                                    <div class="col-md-12 text-center">
                                        <br>
                                        <a class="none-director btn btn-green" href="/scholarships/application?step=2">ถัดไป</a>
                                        <br>
                                    </div>
                                </div>
                                <!-- STEP 2 -->
                                <% } if (step == '2') { %>
                                <div class="content-2" id="content-2">
                                    <div class="row">
                                        <form action="/add/applicationForm/" method="POST" enctype="multipart/form-data">
                                            <div class="row px-md-4 d-flex justify-content-center">
                                                <p class="mt-2 fw-bold">ข้อมูลส่วนบุคคล</p>
                                                <div class="col-md-4">
                                                    <div class="mb-3">
                                                        <label for="name" class="form-label fs-6 ">ชื่อ :</label>
                                                        <input
                                                        type="text"
                                                        class="form-control"
                                                        id="name" name="name"
                                                        style="background-color: #f6f6ff;"
                                                        required
                                                        >
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="mb-3">
                                                        <label for="dob" class="form-label fs-6 ">วัน-เดือน-ปีเกิด :</label>
                                                        <input
                                                        type="date"
                                                        class="form-control"
                                                        id="dob" name="dob"
                                                        style="background-color: #f6f6ff;"
                                                        required
                                                        >
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="mb-3">
                                                        <label for="password" class="form-label fs-6 ">เพศ :</label>
                                                        <select class="form-select" name="gender" id="gender" style="background-color: #f6f6ff;" required>
                                                            <option selected disabled>-- เลือกเพศ --</option>
                                                            <option  value="male">ชาย</option>
                                                            <option  value="female">หญิง</option>
                                                            <option  value="Other">อื่นๆ</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row px-md-4 d-flex justify-content-center">
                                                <p class="mt-2 fw-bold">ข้อมูลการติดต่อ</p>
                                                <div class="col-md-4">
                                                    <div class="mb-2">
                                                        <label for="phone" class="form-label fs-6 ">เบอร์โทร :</label>
                                                        <input
                                                        type="text"
                                                        class="form-control"
                                                        id="phone" name="phone"
                                                        style="background-color: #f6f6ff;"
                                                        maxlength="10" minlength="10"
                                                        required
                                                        >
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="email" class="form-label fs-6 ">อีเมล :</label>
                                                        <input
                                                        type="email"
                                                        class="form-control"
                                                        id="email" name="email"
                                                        style="background-color: #f6f6ff;"
                                                        maxlength="50"
                                                        required
                                                        >
                                                    </div>
                                                </div>
                                                <div class="col-md-7">
                                                    <div class="mb-3">
                                                        <label for="address" class="form-label fs-6 ">ที่อยู่ :</label>
                                                        <textarea
                                                        class="form-control"
                                                        id="address" name="address"
                                                        address rows="4"
                                                        style="background-color: #f6f6ff;resize:none;"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row px-md-4 d-flex justify-content-center">
                                                <p class="mt-2 fw-bold">ข้อมูลการศึกษา</p>
                                                <div class="col-md-3">
                                                    <div class="mb-3">
                                                        <label for="departmentID" class="form-label fs-6 ">แผนก :</label>
                                                        <select class="form-select" name="departmentID" id="departmentID" style="background-color: #f6f6ff;" required >
                                                            <option selected disabled>-- เลือกแผนก --</option>
                                                            <%
                                                            departments.forEach(department => {
                                                            %>
                                                            <option value="<%= department.departmentID%>"><%= department.departmentName%></option>  
                                                            <% }) %>
                                                        </select>
                                                    </div>
                                                </div>
                                                <!-- level -->
                                                <div class="col-md-3">
                                                    <div class="mb-3">
                                                        <label for="level" class="form-label fs-6 ">ชั้นปี :</label>
                                                        <select class="form-select" name="level" id="level" style="background-color: #f6f6ff;" required >
                                                            <option selected disabled>-- เลือกชั้นปี --</option>
                                                            <option value="VC-1">ปวช.1</option>
                                                            <option value="VC-2">ปวช.2</option>
                                                            <option value="VC-3">ปวช.3</option>
                                                            <option value="HVC-1">ปวส.1</option>
                                                            <option value="HVC-2">ปวส.2</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-5">
                                                    <div class="mb-3">
                                                        <label for="teacherName" class="form-label fs-6 ">อาจารย์ที่ปรึกษา :</label>
                                                        <input type="text" class="form-control" id="teacherName" name="teacherName" style="background-color: #f6f6ff;" maxlength="50" required>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row px-md-4 d-flex justify-content-center">
                                                <p class="mt-2 fw-bold">ทุนการศึกษา</p>
                                                <div class="col-md-3">
                                                    <div class="mb-3">
                                                        <label for="departmentID" class="form-label fs-6 ">ทุน :</label>
                                                        <select class="form-select" name="scholarshipID" id="scholarshipID" style="background-color: #f5f5fa;width:100%;" required>
                                                            <option selected disabled value="">เลือกทุน</option>
                                                            <% scholarships.forEach(scholarship => { %>
                                                            <option value="<%= scholarship.scholarshipID%>" data-prize="<%= scholarship.prize%>"><%= new Intl.NumberFormat().format(scholarship.prize)%> บาท/นักเรียน - <%= scholarship.name%></option>
                                                            <% }) %>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-3"></div>
                                                <div class="col-md-5"></div>
                                            </div>
                                            <div class="col-md-12 text-center">
                                                <a class="btn-red btn mb-2" style="padding: 1rem 3rem;" id="addFileBtn">Upload File</a>
                                                <h5 style="display: none;" id ="fileUploadPreview"  > อัพโหลดไฟล์แล้ว</h5>
                                                <input
                                                hidden
                                                type="file"
                                                id="applicationForm" name="applicationForm"
                                                accept="application/pdf"
                                                >
                                                
                                            </div>
                                            <div class="col-md-12 text-center">
                                                <br>
                                                <button type="submit" class="btn-green " style="padding: 1rem 3rem;"> ส่งฟอร์ม </button>
                                                <br>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        var applicationForm = document.getElementById("applicationForm");
        var fileUploadPreview = document.getElementById("fileUploadPreview");

        document.getElementById('addFileBtn').addEventListener('click', function() {
            applicationForm.click();
        });

        applicationForm.onchange = function(event) {
            if (applicationForm.files.length !== 0) {
                fileUploadPreview.style.display = "";
            }
        }

    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/script.js"></script>
</body>
</html>